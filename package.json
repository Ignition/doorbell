{
  "name": "doorbell",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage": "rm -rf .nyc_output && COVERAGE=true playwright test --project=chromium && nyc report --reporter=text --reporter=html",
    "test:coverage": "vitest run --coverage --coverage.include='src/**/*.ts'"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/svelte": "^5.2.9",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/qrcode": "^1.5.6",
    "@vitest/coverage-v8": "^4.0.15",
    "jsdom": "^27.3.0",
    "nyc": "^17.1.0",
    "playwright": "^1.57.0",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-istanbul": "^7.2.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "svelte-spa-router": "^4.0.1",
    "trystero": "^0.22.0"
  }
}
